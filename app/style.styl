*
    margin 0px
    padding 0px

body
    font-family -apple-system, 'Segoe UI', 'Oxygen', 'Ubuntu', 'Cantarell', 'Helvetica Neue', sans-serif
    font-weight 200
    letter-spacing 1px
    color #182530
    -webkit-app-region drag

a
    color inherit
    text-decoration none

    &:hover
        color #182530
        text-decoration underline

#tools
    float left
    display none
    min-width 200px
    padding-right 16px
    padding-left 16px
    text-decoration none
    font-size 16px
    line-height 20px
    color #182530
    background #f4f4f4
    border-right solid 1px #A4A9AD
    -webkit-app-region drag
    -webkit-user-select none
    user-select none
    cursor default
    overflow-x hidden
    overflow-y auto

    h1
        margin 60px 0px 40px 0px
        font-size 40px
        font-weight 100
        line-height 40px
        text-align center

        a
            display block
            padding-top 5px
            font-size 12px
            line-height 12px
            font-weight 200
            color #777B7E
            text-decoration none

            &:hover
                color #182530
                text-decoration none

    h2
        margin-top 60px
        padding-bottom 2px
        font-size 12px
        font-weight 400
        line-height 14px
        color #A4A9AD
        text-transform uppercase
        border-bottom solid 1px #C5C8CB

    h3
        margin-top 20px
        font-size 14px
        font-weight 200
        line-height 14px
        color #777B7E
        text-transform lowercase

        &:first-child
            margin-top 0px

    a.button
        display block
        margin 5px -16px 0px -16px
        padding 4px 16px
        text-decoration none
        font-size 14px
        line-height 20px
        font-weight 400
        color #182530
        z-index 100

        &:hover
            color #000000
            background #E6E8E9

    select
        margin-top 5px
        -webkit-app-region no-drag
        -webkit-user-select none


#log
    padding-right 16px
    padding-left 16px
    font-size 12px
    line-height 20px
    overflow auto

    table
        margin-top 52px
        width 100%

        tr
            &.error
                color red

            &:last-child
                td
                    border-bottom none
            td
                padding 8px 4px
                vertical-align top
                border-bottom 1px solid #f4f4f4

                &.nowrap
                    white-space nowrap

                .alias
                    color #B9B9B9

                pre
                    padding-top 5px


#log-footer
    position fixed
    bottom 0px
    padding 10px
    text-align center
    font-size 12px
    line-height 12px
    font-weight 100
    -webkit-app-region drag
    -webkit-user-select none
    user-select none
    cursor default

    a
        color #182530
        text-decoration none

        &:hover
            color #182530
            font-weight bold

#log-footer
    right 0px
    left 361px
    background #ffffff
