body
    margin 0px
    padding 0px
    font-family -apple-system, 'Segoe UI', 'Oxygen', 'Ubuntu', 'Cantarell', 'Helvetica Neue', sans-serif
    font-weight 200
    letter-spacing 1px
    color #182530
    -webkit-app-region drag

a
    color inherit
    text-decoration none

    &:hover
        color #182530
        text-decoration underline

#tools
    float left
    display none
    height 100%
    min-width 200px
    padding 0px
    text-decoration none
    font-size 14px
    line-height 20px
    color #182530
    background #f4f4f4
    border-right solid 1px #A4A9AD
    -webkit-app-region drag
    -webkit-user-select none
    user-select none
    cursor default
    overflow-x hidden
    overflow-y auto

    h1
        margin 60px 0px 40px 0px
        padding 0px
        font-size 40px
        font-weight 100
        line-height 40px
        text-align center

        a
            display block
            padding-top 5px
            font-size 12px
            line-height 12px
            font-weight 200
            color #777B7E
            text-decoration none

            &:hover
                color #182530
                text-decoration none

    h2
        margin 60px 15px 0px 15px
        padding 0px 5px 2px 5px
        font-size 12px
        font-weight 400
        line-height 14px
        color #A4A9AD
        text-transform uppercase
        border-bottom solid 1px #C5C8CB

    h3
        margin 20px 20px 0px 20px
        padding 0px
        font-size 14px
        font-weight 200
        line-height 14px
        color #777B7E
        text-transform lowercase

        &:first-child
            margin-top 0px

    a.button
        display block
        margin 5px 0px 0px 0px
        padding 3px 20px
        text-decoration none
        font-size 14px
        line-height 20px
        font-weight 400
        color #182530
        z-index 100

        &:hover
            color #000000
            background #E6E8E9

    select
        margin 5px 20px 0px 20px
        -webkit-app-region no-drag
        -webkit-user-select none


#log
    padding 0px
    font-size 12px
    line-height 20px
    overflow auto

    table
        width 100%

        tr
            &:hover
                background #f4f4f4

            &.log
                white-space nowrap

            &.error
                color red

            td
                margin 0px
                padding 5px 10px
                vertical-align top
                border-bottom 1px solid #f4f4f4

                .alias
                    color #B9B9B9

                pre
                    margin 0px
                    padding 5px 0px 0px 0px


#log-footer
    position fixed
    bottom 0px
    padding 10px
    text-align center
    font-size 12px
    line-height 12px
    font-weight 100
    -webkit-app-region drag
    -webkit-user-select none
    user-select none
    cursor default

    a
        color #182530
        text-decoration none

        &:hover
            color #182530
            font-weight bold

#log-footer
    right 0px
    left 361px
    background #ffffff
