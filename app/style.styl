body
    margin 0px
    padding 0px
    font-family -apple-system, 'Segoe UI', 'Oxygen', 'Ubuntu', 'Cantarell', 'Helvetica Neue', sans-serif
    font-weight 200
    letter-spacing 1px
    color #182530
    -webkit-app-region drag

h1
    margin 50px 0px 40px 0px
    padding 0px
    font-size 40px
    font-weight 100
    line-height 40px
    text-align center

a
    color inherit
    text-decoration none

    &:hover
        color #182530
        text-decoration underline

#tools
    position fixed
    top 0px
    left 0px
    bottom 0px
    width 320px
    background #f4f4f4
    -webkit-app-region drag
    -webkit-user-select none
    user-select none
    cursor default
    overflow hidden

    a.button
        display block
        width 250px
        min-height 40px
        margin 0px auto 10px auto
        padding 10px
        text-align center
        text-decoration none
        font-size 14px
        line-height 20px
        color #a4a9ad
        background #ffffff
        border 1px solid #a4a9ad
        z-index 100

        &:hover
            color #182530
            border 1px solid #182530

        span
            display block
            text-align center
            font-size 11px
            font-weight 100
            line-height 16px
            color #909090

#log
    position fixed
    top 5px
    right 0px
    bottom 30px
    left 325px
    padding 0px 5px 10px 0px
    font-size 12px
    line-height 20px
    overflow auto

    table
        width 100%

        tr
            &:hover
                background #f4f4f4

            &.log
                white-space nowrap

            &.error
                color red

            td
                margin 0px
                padding 5px 10px
                vertical-align top
                border-bottom 1px solid #f4f4f4

                .alias
                    color #B9B9B9

                pre
                    margin 0px
                    padding 5px 0px 0px 0px


#tools-footer
#log-footer
    position fixed
    bottom 0px
    padding 10px 0px
    text-align center
    font-size 12px
    line-height 12px
    font-weight 100
    -webkit-app-region drag
    -webkit-user-select none
    user-select none
    cursor default

    a
        color #182530
        text-decoration none

        &:hover
            color #182530
            font-weight bold

#tools-footer
    left 0px
    width 320px
    background #f4f4f4

#log-footer
    right 0px
    left 320px
    background #ffffff
